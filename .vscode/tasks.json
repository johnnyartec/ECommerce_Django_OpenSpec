{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Django server",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe manage.py runserver",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Run migrations",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe manage.py migrate",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Make migrations",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe manage.py makemigrations",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Collect static",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe manage.py collectstatic --noinput",
      "presentation": { "reveal": "always", "panel": "shared" }
    }
  ]
}
